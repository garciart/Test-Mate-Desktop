<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="ap" prefHeight="480" prefWidth="640" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="testmatedesktop.TestMateDesktopController">
    <stylesheets>
        <URL value="@testmatedesktop.css" />
    </stylesheets>
    <children>
        <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu mnemonicParsing="false" text="Main">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#startNewTest" text="Start a New Test..." />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#exitTestMate" text="Exit Test Mate">
                            <accelerator>
                                <KeyCodeCombination alt="DOWN" code="X" control="UP" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Options">
                    <items>
                        <CheckMenuItem fx:id="onTopMenuItem" mnemonicParsing="false" selected="false" text="Keep Test Mate on Top" onAction="#menuOnTop" />
                        <Menu mnemonicParsing="false" text="Key Term Display">
                            <items>
                                <RadioMenuItem mnemonicParsing="false" selected="true" text="List the Terms as Choices">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="KeyTermDisplay" />
                                    </toggleGroup>
                                </RadioMenuItem>
                                <RadioMenuItem mnemonicParsing="false" text="List the Definitions as Choices" toggleGroup="$KeyTermDisplay" />
                                <RadioMenuItem mnemonicParsing="false" text="Randomize the display of choices" toggleGroup="$KeyTermDisplay" />
                            </items>
                        </Menu>
                        <CheckMenuItem mnemonicParsing="false" selected="true" text="Provide Feedback After Answering" />
                        <CheckMenuItem mnemonicParsing="false" text="Randomize the Question Order" />
                        <CheckMenuItem mnemonicParsing="false" selected="true" text="Show the Clock" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Help Topics" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="About Test Mate..." />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label fx:id="testTimeLabel" layoutX="14.0" layoutY="32.0" AnchorPane.leftAnchor="15.0">
            <padding>
                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
            </padding>
        </Label>
        <Label fx:id="titleLabel" contentDisplay="CENTER" layoutX="237.0" layoutY="32.0" text="Welcome to Test Mate!" textAlignment="CENTER">
            <padding>
                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
            </padding>
        </Label>
        <Label fx:id="questionNumberLabel" layoutX="605.0" layoutY="32.0" AnchorPane.rightAnchor="15.0">
            <padding>
                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
            </padding>
        </Label>
        <SplitPane fx:id="sp" dividerPositions="0.4" focusTraversable="true" layoutX="11.0" layoutY="65.0" prefHeight="360.0" prefWidth="620.0">
            <items>
                <AnchorPane fx:id="leftAP" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <ScrollPane fx:id="questionPane" fitToWidth="true" layoutY="41.0" prefHeight="358.0" prefWidth="180.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <padding>
                                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                            </padding>
                            <content>
                                <Label fx:id="questionLabel" wrapText="true" />
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="rightAP" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <ScrollPane fx:id="choicePane" fitToWidth="true" prefHeight="358.0" prefWidth="430.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <padding>
                                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                            </padding>
                            <content>
                                <VBox fx:id="choiceBox" spacing="10.0" />
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
        <Button fx:id="reviewButton" contentDisplay="CENTER" disable="true" layoutX="14.0" layoutY="435.0" mnemonicParsing="false" text="&lt; Review" />
        <Button fx:id="scoreButton" contentDisplay="CENTER" disable="true" layoutX="189.0" layoutY="435.0" mnemonicParsing="false" text="Show Score" textAlignment="CENTER" />
        <Button fx:id="mediaButton" contentDisplay="CENTER" disable="true" layoutX="372.0" layoutY="435.0" mnemonicParsing="false" text="Media" />
        <Button fx:id="nextButton" contentDisplay="CENTER" disable="true" layoutX="561.0" layoutY="435.0" mnemonicParsing="false" text="Next &gt;" />
    </children>
</AnchorPane>
